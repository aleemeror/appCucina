<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.studente.appcucinaproject.RicercaAvanzata.RicercaAV"
    tools:showIn="@layout/app_bar_ricerca_av">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Nome: "
                            android:id="@+id/textView2"
                            android:layout_alignTop="@+id/editText"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignBottom="@+id/editText"
                            android:layout_alignParentTop="false"
                            android:gravity="fill_vertical"
                            android:layout_toLeftOf="@+id/editText"
                            android:layout_toStartOf="@+id/editText" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText"
                            android:hint="Nome ricetta"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_toRightOf="@+id/textView4"
                            android:layout_toEndOf="@+id/textView4"
                            android:layout_marginLeft="20dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText2"
                            android:layout_below="@+id/editText"
                            android:layout_alignLeft="@+id/editText"
                            android:layout_alignStart="@+id/editText"
                            android:layout_marginTop="4dp"
                            android:layout_alignRight="@+id/editText"
                            android:layout_alignEnd="@+id/editText"
                            android:hint="Ingrediente 1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Ingredienti:"
                            android:id="@+id/textView3"
                            android:layout_alignBottom="@+id/editText2"
                            android:layout_toLeftOf="@+id/editText2"
                            android:layout_alignTop="@+id/editText2"
                            android:gravity="fill_vertical"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText3"
                            android:layout_below="@+id/editText2"
                            android:layout_toRightOf="@+id/textView3"
                            android:layout_alignRight="@+id/editText2"
                            android:layout_alignEnd="@+id/editText2"
                            android:hint="Ingrediente 2" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText4"
                            android:layout_below="@+id/editText3"
                            android:layout_alignLeft="@+id/editText3"
                            android:layout_alignStart="@+id/editText3"
                            android:layout_alignRight="@+id/editText3"
                            android:layout_alignEnd="@+id/editText3"
                            android:hint="Ingrediente 3" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Antipasto"
                            android:id="@+id/checkBox"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/editText4"
                            android:layout_alignLeft="@+id/editText4"
                            android:layout_alignStart="@+id/editText4"
                            android:checked="false" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Primo"
                            android:id="@+id/checkBox2"
                            android:checked="false"
                            android:layout_alignTop="@+id/checkBox"
                            android:layout_toRightOf="@+id/checkBox"
                            android:layout_alignRight="@+id/editText4"
                            android:layout_alignEnd="@+id/editText4" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Secondo"
                            android:id="@+id/checkBox3"
                            android:checked="false"
                            android:layout_below="@+id/checkBox2"
                            android:layout_alignRight="@+id/checkBox"
                            android:layout_alignEnd="@+id/checkBox"
                            android:layout_alignLeft="@+id/checkBox"
                            android:layout_alignStart="@+id/checkBox" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dolce"
                            android:id="@+id/checkBox4"
                            android:checked="false"
                            android:layout_below="@+id/checkBox2"
                            android:layout_alignRight="@+id/checkBox2"
                            android:layout_alignEnd="@+id/checkBox2"
                            android:layout_alignLeft="@+id/checkBox2"
                            android:layout_alignStart="@+id/checkBox2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Tipologia:"
                            android:id="@+id/textView4"
                            android:layout_alignBottom="@+id/checkBox"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/checkBox"
                            android:gravity="fill_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="DifficoltÃ :"
                            android:id="@+id/textView5"
                            android:layout_below="@+id/checkBox4"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/radioGroup"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/textView5"
                            android:id="@+id/radioGroup"
                            android:layout_alignLeft="@+id/checkBox3"
                            android:layout_alignStart="@+id/checkBox3">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Facile"
                                    android:id="@+id/radioButton"
                                    android:checked="false" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Media"
                                    android:id="@+id/radioButton2"
                                    android:checked="false" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Difficile"
                                    android:id="@+id/radioButton3"
                                    android:checked="false" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Qualsiasi"
                                    android:id="@+id/radioButton4"
                                    android:checked="true" />
                        </RadioGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Tempo:"
                            android:id="@+id/textView6"
                            android:layout_below="@+id/radioGroup"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="40dp" />

                        <RelativeLayout
                            android:id="@+id/integer"
                            android:layout_below="@id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/radioGroup"
                            android:layout_alignStart="@+id/radioGroup">

                                <TextView
                                    android:id="@+id/textInteger"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_below="@+id/textInteger"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingBottom="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="#000000"
                                    android:id="@+id/seekValuemin" />

                                <TextView
                                    android:layout_below="@+id/textInteger"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/seekValuemax"
                                    android:textColor="#000000"
                                    android:layout_marginRight="10dp" />

                                <org.florescu.android.rangeseekbar.RangeSeekBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/seekbar"
                                    rsb:absoluteMaxValue="30"
                                    rsb:absoluteMinValue="0"
                                    rsb:thumbDisabled="@drawable/custom_slider_thumb"
                                    rsb:thumbNormal="@drawable/custom_slider_thumb"
                                    rsb:thumbPressed="@drawable/custom_slider_thumb"
                                    rsb:thumbShadow="true"
                                    rsb:thumbShadowBlur="3dp"
                                    rsb:thumbShadowColor="@color/primary_material_light"
                                    rsb:thumbShadowXOffset="1dp"
                                    rsb:thumbShadowYOffset="2dp"
                                    android:layout_centerVertical="true" />

                        </RelativeLayout>

                        <!--
                        <SeekBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/seekBar2"
                            android:layout_below="@+id/integer"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignLeft="@+id/radioGroup"
                            android:layout_alignStart="@+id/radioGroup"
                            android:layout_marginTop="20dp" />
                        -->



                        <org.florescu.android.rangeseekbar.RangeSeekBar

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/seekBar2"
                            android:layout_below="@+id/integer"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignLeft="@+id/radioGroup"
                            android:layout_alignStart="@+id/radioGroup"

                            rsb:absoluteMaxValue="30"
                            rsb:absoluteMinValue="0"
                            rsb:thumbDisabled="@drawable/custom_slider_thumb"
                            rsb:thumbNormal="@drawable/custom_slider_thumb"
                            rsb:thumbPressed="@drawable/custom_slider_thumb"
                            rsb:thumbShadow="true"
                            rsb:thumbShadowBlur="3dp"
                            rsb:thumbShadowColor="@color/primary_material_light"
                            rsb:thumbShadowXOffset="1dp"
                            rsb:thumbShadowYOffset="2dp"
                            android:layout_centerVertical="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Calorie:"
                            android:id="@+id/textView7"
                            android:layout_alignBottom="@+id/seekBar2"
                            android:layout_toLeftOf="@+id/seekBar2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cerca"
                            android:id="@+id/buttonCerca"
                            android:layout_marginTop="20dp"
                            android:layout_alignRight="@id/seekBar2"
                            android:layout_below="@id/seekBar2" />

                        <!--
                        <NumberPicker
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/numberPickerHours"
                            android:layout_below="@+id/radioGroup"
                            android:layout_toRightOf="@+id/textView7"
                            android:layout_toEndOf="@+id/textView7"
                            android:layout_marginTop="10dp" />

                        <NumberPicker
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/numberPickerMinutes"
                            android:layout_above="@+id/seekBar2"
                            android:layout_toRightOf="@+id/numberPickerHours"
                            android:layout_toEndOf="@+id/numberPickerHours" />

                        <NumberPicker
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/numberPickerSeconds"
                            android:layout_alignTop="@+id/numberPickerHours"
                            android:layout_toRightOf="@+id/numberPickerMinutes"
                            android:layout_toEndOf="@+id/numberPickerMinutes" />
                        -->

                </RelativeLayout>
        </ScrollView>
</LinearLayout>
