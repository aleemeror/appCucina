<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.studente.appcucinaproject.Ricetta.Ricetta"
    tools:showIn="@layout/activity_ricetta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <ImageView
                android:layout_width="414dp"
                android:layout_height="300dp"
                android:id="@+id/d_ricetta_image"
                android:src="@drawable/ic_ricettario"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/d_ricetta_title"
                android:text="Titolo Ricetta"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                style="@style/Base.TextAppearance.AppCompat.Title" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nPersone"
                    android:src="@drawable/users"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tempoRicetta"
                    android:src="@drawable/time"
                    android:layout_below="@+id/nPersone"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/difficoltaRicetta"
                    android:src="@drawable/difficolta"
                    android:layout_below="@+id/tempoRicetta"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/calorie"
                    android:src="@drawable/calories"
                    android:layout_below="@+id/difficoltaRicetta"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/portata"
                    android:src="@drawable/portata"
                    android:layout_below="@+id/calorie"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredienti_img"
                    android:src="@drawable/ingredienti"
                    android:layout_below="@+id/portata"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="n persone"
                    android:id="@+id/textView11"
                    android:layout_alignBottom="@+id/nPersone"
                    android:layout_toRightOf="@+id/nPersone"
                    android:layout_toEndOf="@+id/nPersone"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tempo impiegato"
                    android:id="@+id/textView12"
                    android:layout_alignBottom="@+id/tempoRicetta"
                    android:layout_toRightOf="@+id/tempoRicetta"
                    android:layout_toEndOf="@+id/tempoRicetta"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="difficoltÃ "
                    android:id="@+id/textViewDifficolta"
                    android:layout_alignBottom="@+id/difficoltaRicetta"
                    android:layout_toRightOf="@+id/difficoltaRicetta"
                    android:layout_toEndOf="@+id/difficoltaRicetta"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="calorie"
                    android:id="@+id/textView14"
                    android:layout_alignBottom="@+id/calorie"
                    android:layout_toRightOf="@+id/calorie"
                    android:layout_toEndOf="@+id/calorie"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="portata"
                    android:id="@+id/textView15"
                    android:layout_alignBottom="@+id/portata"
                    android:layout_toRightOf="@+id/portata"
                    android:layout_toEndOf="@+id/portata"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ingredienti_img"
                    android:layout_toRightOf="@+id/ingredienti_img"
                    android:layout_toEndOf="@+id/ingredienti_img"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/ID_ingredienti"
                        android:layout_alignLeft="@+id/textView12"
                        android:text="Ingrediente 1"
                        android:maxLines="4"
                        android:scrollbars="vertical"/>

                </android.support.v4.widget.NestedScrollView>


            </RelativeLayout>

            <Space android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/space1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Procedimento"
                android:id="@+id/textViewTitoloProcedimento"
                android:textAlignment="center"
                android:textStyle="bold"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="@string/large_text"
                android:textSize="20sp"
                android:id="@+id/textView5"
                android:layout_weight="0.94"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
